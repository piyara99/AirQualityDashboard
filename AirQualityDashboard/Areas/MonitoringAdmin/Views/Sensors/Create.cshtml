@addTagHelper *, Microsoft.AspNetCore.Mvc.TagHelpers
@model AirQualityDashboard.Models.Sensor

@{
    ViewData["Title"] = "Create Sensor";
}

<div class="container mt-4">
    <div class="card">
        <div class="card-header bg-primary text-white">
            <h4 class="card-title mb-0">Create New Sensor</h4>
        </div>
        <div class="card-body">
            <form asp-action="Create">
                @Html.AntiForgeryToken()

                <div class="form-group">
                    <label asp-for="LocationName" class="control-label"></label>
                    <input asp-for="LocationName" class="form-control" placeholder="e.g. Colombo Fort" />
                    <span asp-validation-for="LocationName" class="text-danger"></span>
                </div>

                <div class="form-group">
                    <label asp-for="Name" class="control-label"></label>
                    <input asp-for="Name" class="form-control" placeholder="Sensor name or ID" />
                    <span asp-validation-for="Name" class="text-danger"></span>
                </div>

                <div class="form-group">
                    <label asp-for="Latitude" class="control-label"></label>
                    <input asp-for="Latitude" class="form-control" placeholder="e.g. 6.9271" />
                    <span asp-validation-for="Latitude" class="text-danger"></span>
                </div>

                <div class="form-group">
                    <label asp-for="Longitude" class="control-label"></label>
                    <input asp-for="Longitude" class="form-control" placeholder="e.g. 79.8612" />
                    <span asp-validation-for="Longitude" class="text-danger"></span>
                </div>

                <div class="form-check mb-3">
                    <input asp-for="IsActive" class="form-check-input" />
                    <label asp-for="IsActive" class="form-check-label"></label>
                    <span asp-validation-for="IsActive" class="text-danger"></span>
                </div>

                <div class="form-group">
                    <label asp-for="SensorIndex" class="control-label"></label>
                    <input asp-for="SensorIndex" class="form-control" placeholder="e.g. 101 or PA-03" />
                    <span asp-validation-for="SensorIndex" class="text-danger"></span>
                </div>

                <br />
                <button type="submit" class="btn btn-success">Create</button>
                <a asp-action="Index" class="btn btn-secondary">Back</a>
            </form>
        </div>
    </div>
</div>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}
