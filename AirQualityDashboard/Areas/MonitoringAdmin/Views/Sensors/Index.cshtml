@addTagHelper *, Microsoft.AspNetCore.Mvc.TagHelpers

@model IEnumerable<AirQualityDashboard.Models.Sensor>

@{
    ViewData["Title"] = "Sensors";
}

<h1>Sensors</h1>

<p>
    <a class="btn btn-primary" asp-area="MonitoringAdmin" asp-controller="Sensors" asp-action="Create">Create New Sensor</a>
</p>

<table class="table">
    <thead>
        <tr>
            <th>Location</th>
            <th>Name</th>
            <th>Latitude</th>
            <th>Longitude</th>
            <th>Active</th>
            <th>Sensor Index</th>
            <th>Actions</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
            <tr>
                <td>@item.LocationName</td>
                <td>@item.Name</td>
                <td>@item.Latitude</td>
                <td>@item.Longitude</td>
                <td>
                    @if (item.IsActive)
                    {
                        <span class="badge bg-success">Active</span>
                    }
                    else
                    {
                        <span class="badge bg-danger">Inactive</span>
                    }
                </td>
                <td>@item.SensorIndex</td>
                <td>
                    <a class="btn btn-sm btn-info" asp-area="MonitoringAdmin" asp-controller="Sensors" asp-action="Details" asp-route-id="@item.Id">Details</a> |
                    <a class="btn btn-sm btn-warning" asp-area="MonitoringAdmin" asp-controller="Sensors" asp-action="Edit" asp-route-id="@item.Id">Edit</a> |
                    <a class="btn btn-sm btn-danger" asp-area="MonitoringAdmin" asp-controller="Sensors" asp-action="Delete" asp-route-id="@item.Id">Delete</a>
                </td>
            </tr>
        }
    </tbody>
</table>
