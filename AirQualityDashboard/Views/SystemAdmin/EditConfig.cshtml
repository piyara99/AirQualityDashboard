@{
}
@model SystemConfig

<div class="container mt-4">
    <h2>Edit Configuration</h2>
    <hr />

    <div class="row">
        <div class="col-md-6">
            <form asp-action="EditConfig">
                <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                <input type="hidden" asp-for="Id" />

                <div class="form-group">
                    <label asp-for="ConfigKey" class="control-label"></label>
                    <input asp-for="ConfigKey" class="form-control" readonly />
                </div>

                <div class="form-group">
                    <label asp-for="ConfigValue" class="control-label"></label>
                    <input asp-for="ConfigValue" class="form-control" />
                    <span asp-validation-for="ConfigValue" class="text-danger"></span>
                </div>

                <div class="form-group">
                    <label asp-for="Description" class="control-label"></label>
                    <textarea asp-for="Description" class="form-control"></textarea>
                    <span asp-validation-for="Description" class="text-danger"></span>
                </div>

                <div class="form-group">
                    <input type="submit" value="Save" class="btn btn-primary" />
                    <a asp-action="Index" class="btn btn-secondary">Back to List</a>
                </div>
            </form>
        </div>
    </div>
</div>