@model List<AirQualityDashboard.ViewModels.UserManagementViewModel>


@{
    ViewData["Title"] = "Monitoring Admins";
}

<h2>@ViewData["Title"]</h2>

<a asp-action="Create" class="btn btn-primary mb-3">Add New Admin</a>

<table class="table table-striped">
    <thead>
        <tr>
            <th>Username</th>
            <th>Email</th>
            <th>Actions</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var admin in Model)
        {
            <tr>
                <td>@admin.Username</td>
                <td>@admin.Email</td>
                <td>
                    <form asp-action="DeleteUser" method="post" asp-route-id="@admin.UserId" onsubmit="return confirm('Are you sure you want to delete this admin?');">
                        <button type="submit" class="btn btn-danger btn-sm">Delete</button>
                    </form>
                </td>
            </tr>
        }

    </tbody>
</table>
