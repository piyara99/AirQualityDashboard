@{
    var controller = ViewContext.RouteData.Values["controller"]?.ToString()?.ToLower() ?? "";
    var isAdmin = controller == "admin" || controller == "sensors" || controller == "simulations";
}

<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - AirQualityDashboard</title>
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/AirQualityDashboard.styles.css" asp-append-version="true" />
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.10.3/font/bootstrap-icons.css" />
</head>
<body class="d-flex">
    @if (isAdmin)
    {
        <!-- Admin Sidebar -->
        <div class="d-flex flex-column flex-shrink-0 p-3 text-white bg-dark" style="width: 280px; height: 100vh;">
            <h4 class="mb-4">Admin Dashboard</h4>
            <ul class="nav nav-pills flex-column mb-auto">
                <li class="nav-item">
                    <a href="@Url.Action("Index", "Admin")" class="nav-link text-white">
                        <i class="bi bi-house-door"></i> Dashboard
                    </a>
                </li>
                <li class="nav-item">
                    <a href="@Url.Action("Index", "Sensors")" class="nav-link text-white">
                        <i class="bi bi-gear"></i> Manage Sensors
                    </a>
                </li>
                <li class="nav-item">
                    <a href="@Url.Action("Index", "Simulations")" class="nav-link text-white">
                        <i class="bi bi-cloud"></i> Manage Simulations
                    </a>
                </li>
                <li class="nav-item">
                    <a href="@Url.Action("Index", "AlertThresholds")" class="nav-link text-white">
                        <i class="bi bi-bell"></i> Manage Alerts
                    </a>
                </li>
                <li class="nav-item">
                    <a href="@Url.Action("SystemStatus", "Admin")" class="nav-link text-white">
                        <i class="bi bi-bar-chart"></i> System Status
                    </a>
                </li>
            </ul>
            <hr>
            <div class="dropdown">
                <button class="btn btn-dark dropdown-toggle" type="button" id="dropdownMenuButton" data-bs-toggle="dropdown" aria-expanded="false">
                    Settings
                </button>
                <ul class="dropdown-menu" aria-labelledby="dropdownMenuButton">
                    <li><a class="dropdown-item" href="#">Profile</a></li>
                    <li><a class="dropdown-item" href="#">Logout</a></li>
                </ul>
            </div>
        </div>
    }

    <!-- Main Content -->
    <div class="container-fluid" style="@(isAdmin ? "margin-left: 280px;" : "width: 100%;")">
        <div class="row">
            <div class="col py-3">
                @RenderBody()
            </div>
        </div>
    </div>

    <!-- Footer -->
    <footer class="border-top footer text-muted mt-auto">
        <div class="container">
            &copy; 2025 - AirQualityDashboard - <a asp-area="" asp-controller="Home" asp-action="Privacy">Privacy</a>
        </div>
    </footer>

    <!-- Scripts -->
    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    <script src="~/js/site.js" asp-append-version="true"></script>
    @await RenderSectionAsync("Scripts", required: false)
</body>
</html>
