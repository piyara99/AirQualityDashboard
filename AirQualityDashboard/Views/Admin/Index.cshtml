@model List<AppUser>

@{
    ViewData["Title"] = "Monitoring Admins";
}

<h2>@ViewData["Title"]</h2>

<!-- Add New Admin Button -->
<a href="@Url.Action("Create", "Admin")" class="btn btn-primary mb-3">Add New Admin</a>

<!-- Admin List Table -->
<table class="table table-striped">
    <thead>
        <tr>
            <th>Name</th>
            <th>Email</th>
            <th>Actions</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var admin in Model)
        {
            <tr>
                <td>@admin.FullName</td>
                <td>@admin.Email</td>
                <td>
                    <!-- Delete Form -->
                    <form asp-action="Delete" method="post" onsubmit="return confirm('Are you sure you want to delete this admin?');">
                        <input type="hidden" name="id" value="@admin.Id" />
                        <button type="submit" class="btn btn-danger">Delete</button>
                    </form>
                </td>
            </tr>
        }
    </tbody>
</table>
